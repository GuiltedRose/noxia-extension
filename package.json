{
  "name": "noxia",
  "displayName": "noxia-syntax-highlighting",
  "publisher": "guiltedrose",
  "description": "Syntax highlighting and editor support for the Noxia programming language",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/GuiltedRose/noxia-extension.git"
  },
  "engines": {
    "vscode": ">=0.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:noxia"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "noxia",
        "aliases": ["Noxia", "noxia"],
        "extensions": [".nx"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "noxia",
        "scopeName": "source.noxia",
        "path": "./syntaxes/noxia.tmLanguage.json"
      }
    ]
  }
}

